<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll1"
        android:layout_above="@+id/bottom_buttons"

        >


        <include layout="@layout/toolbar"/>





        <RelativeLayout
            android:id="@+id/currencyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_half"
            >

            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing_normal"
                android:paddingRight="@dimen/spacing_normal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_normal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farmer Name:"
                        android:layout_marginRight="@dimen/spacing_half"
                        android:textColor="@color/text_black_87"
                        />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aang Junior"
                        android:textStyle="bold"
                        android:textColor="@color/text_black_87"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_quarter"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farmer Code:"
                        android:layout_marginRight="@dimen/spacing_half"

                        />

                    <TextView
                        android:id="@+id/code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23445"
                        android:textStyle="bold"
                        />


                </LinearLayout>






            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/spacing_normal"
                android:layout_alignParentRight="true"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Currency:"
                    android:layout_marginRight="@dimen/spacing_half"
                    android:textColor="@color/text_black_87"
                    />

                <TextView
                    android:id="@+id/currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GHS"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    />

            </LinearLayout>

        </RelativeLayout>


                <FrameLayout
                    android:id="@+id/horizontalView"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal|vertical"
                    android:layout_width="match_parent"
                     android:isScrollContainer="true"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginLeft="@dimen/spacing_half"
                    android:layout_marginRight="@dimen/spacing_half"
                    android:background="@drawable/table_view_border_background"

                    >



                    <com.evrencoskun.tableview.TableView
                        android:id="@+id/table_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:column_header_height="60dp"
                        android:clickable="false"
                        android:focusable="false"

                        />

                </FrameLayout>

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_buttons"
        android:paddingLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_normal"

        >







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:clipChildren="false"
            >

            <Button
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:theme="@style/PrimaryButtonGrey"
                android:text="Back"
                android:padding="@dimen/spacing_normal"
                />




            <Button
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:theme="@style/PrimaryButtonAccent"
                android:text="Save"
                android:padding="@dimen/spacing_normal"
                android:layout_marginLeft="@dimen/spacing_normal"

                />

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>