
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="0dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"

        >



        <com.mancj.materialsearchbar.MaterialSearchBar
            style="@style/MaterialSearchBarLight"
            app:mt_speechMode="false"
            app:mt_hint="Search farmer"
            android:layout_margin="@dimen/spacing_half"
            app:mt_maxSuggestionsCount="10"
            app:mt_navIconEnabled="true"
            app:mt_placeholder="@string/app_name"
            app:mt_placeholderColor="@android:color/primary_text_light"
            app:mt_navIconTint="@android:color/tertiary_text_light"
            app:mt_searchIconTint="@android:color/tertiary_text_light"
            app:mt_clearIconTint="@android:color/tertiary_text_light"
            app:mt_roundedSearchBarEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchBar" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VILLAGE A"
            android:layout_below="@id/searchBar"
            android:padding="@dimen/spacing_normal"
            style="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>
</android.support.v7.widget.CardView>







