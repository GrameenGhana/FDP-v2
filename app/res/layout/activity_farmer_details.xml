<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <include layout="@layout/toolbar"/>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/spacing_normal"

                >


                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="@dimen/image_view_size"
                    android:layout_height="@dimen/image_view_size">




                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_accent"
                        />


                    <TextView
                        android:id="@+id/initials"
                        style="@style/TextAppearance.AppCompat.Display2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F N"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif-light"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        />



                </RelativeLayout>



            </RelativeLayout>





            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rl1"
                android:layout_toLeftOf="@+id/edit"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Julian Gomez"
                    android:layout_marginBottom="@dimen/spacing_half"
                    android:textColor="@android:color/primary_text_light"
                    style="@style/TextAppearance.AppCompat.Medium"
                    />


                <TextView
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#TYHS3"
                    android:textAllCaps="true"
                    android:layout_marginBottom="@dimen/spacing_half"

                    />


                <TextView
                    android:id="@+id/villageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Space Ex Village"
                    android:layout_marginBottom="@dimen/spacing_half"

                    />


                <TextView
                    android:id="@+id/landSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.5 Ha"
                    android:textAllCaps="true"
                    android:layout_marginBottom="@dimen/spacing_half"

                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last visit: "
                        android:layout_marginBottom="@dimen/spacing_half"

                        />


                    <TextView
                        android:id="@+id/lastVisitDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jan 12, 2017"
                        android:layout_marginBottom="@dimen/spacing_half"

                        />



                </LinearLayout>




            </LinearLayout>

            <View
                android:visibility="gone"
                android:id="@+id/sync"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/circle_green"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/spacing_normal"


                />


            <ImageView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ll1"
                android:padding="@dimen/spacing_normal"
                android:background="?attr/selectableItemBackgroundBorderless"
                 />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_normal"
        android:clipToPadding="false"
        android:clipChildren="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/noOfPlots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plots (2)"
                        android:padding="@dimen/spacing_normal"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_tiny"
                        android:textStyle="bold"
                        />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/noOfPlots"
                        android:id="@+id/plotsRl"

                        >

                        <LinearLayout
                            android:id="@+id/noPlotsAddedLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/spacing_normal"
                            android:gravity="center"
                            >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No plots added"
                            android:textColor="@android:color/primary_text_light"
                            android:layout_marginBottom="@dimen/spacing_half"
                             />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Click the button below to add a new plot."
                             />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            >

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/plotsRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_normal"
                                android:layout_marginRight="@dimen/spacing_normal"
                                />

                        </LinearLayout>

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/addPlot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add a new plot"
                        android:padding="@dimen/spacing_normal"
                        android:textColor="@color/colorAccent"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/plotsRl"
                        style="@style/TextAppearance.AppCompat.Button"
                         android:background="?attr/selectableItemBackground"
                        />



                </RelativeLayout>



            </android.support.v7.widget.CardView>




        </LinearLayout>


    </ScrollView>
</LinearLayout>