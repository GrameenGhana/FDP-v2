<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_1</item>
        <item name="colorPrimaryDark">@color/background_1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- <item name="spinnerStyle">@style/SpinnerStyle</item>-->
        <item name="android:buttonStyle">@style/PrimaryButton</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

    </style>


    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorPrimary">@color/textColorPrimaryLight</item>
        <item name="textColorSecondary">@color/textColorSecondaryLight</item>
        <item name="textColorTertiary">@color/textColorTertiaryLight</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryLightInverted</item>
        <item name="textColorSecondaryInverse">@color/textColorSecondaryLightInverted</item>
        <item name="backgroundColor">@color/white</item>
        <item name="bottomSheetBackgroundColor">@color/bottom_sheet_light</item>
        <item name="fab_label_background_color">@color/fab_label_background_color_light</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
        <item name="alertDialogTheme">@style/AppAlertDialog</item>


    </style>




    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryInverted</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInverted</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorPrimary">@color/textColorPrimaryLightInverted</item>
        <item name="textColorSecondary">@color/textColorSecondaryLightInverted</item>
        <item name="textColorTertiary">@color/textColorTertiaryLightInverted</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryLight</item>
        <item name="textColorSecondaryInverse">@color/textColorSecondaryLight</item>
        <item name="backgroundColor">@color/colorPrimaryInverted</item>
        <item name="bottomSheetBackgroundColor">@color/bottom_sheet_dark</item>
        <item name="fab_label_background_color">@color/fab_label_background_color_dark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/colorPrimaryInverted</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
        <item name="alertDialogTheme">@style/AppAlertDialogDark</item>


    </style>




    <style name="MaterialSearchViewStyle">
        <item name="searchBackground">@color/white_ish</item>
        <!--<item name="searchVoiceIcon">@drawable/ic_action_voice_search</item>-->
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close</item>
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back</item>
        <item name="searchSuggestionBackground">@color/transparent</item>
        <item name="searchBarHeight">?attr/actionBarSize</item>
<!--
        <item name="voiceHintPrompt">@string/hint_prompt</item>
-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_50</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:inputType">textCapWords</item>
    </style>




    <style name="AppThemeSplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>




    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/AppPreferenceFragmentCompatStyle</item>
        <item name="android:textColorPrimary">?attr/textColorPrimary</item>
        <item name="android:textColorSecondary">?attr/textColorSecondary</item>
        <item name="android:textColorTertiary">?attr/textColorTertiary</item>
    </style>

    <style name="AppAlertDialogDark" parent="Theme.AppCompat.Dialog.Alert">
        <!-- To tint the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/cardview_dark_background</item>
        <item name="android:itemPadding">@dimen/alert_def_padding</item>

    </style>




    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorAccent</item>

    </style>


    <style name="PrimaryButtonWhite" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorAccent</item>


    </style>


    <style name="PrimaryButtonRed" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/cpb_red</item>
        <item name="colorControlHighlight">@color/cpb_red</item>
        <item name="backgroundTint">@color/cpb_red</item>
        <item name="android:textColor">@color/white</item>


    </style>


    <style name="PrimaryButtonAccent" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_small</item>


    </style>



    <style name="PrimaryButtonGrey" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/divider_2</item>
        <item name="colorControlHighlight">@color/divider_2</item>
        <item name="backgroundTint">@color/divider_2</item>
        <item name="android:textColor">@color/text_black_87</item>
         <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_small</item>


    </style>


    <style name="PrimaryButtonAccent2" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_small</item>


    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LoginTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Translucent" parent="AppAlertDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:textColorPrimary">@color/text_black_87</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/text_black_87</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>

    </style>


    <style name="AppDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- To tint the buttons -->
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/text_black_87</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_light</item>
        <item name="android:itemPadding">@dimen/alert_def_padding</item>
        <item name="panelBackground">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CustomAnimations"/>


    <style name="SelectorTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">@dimen/text_size_large</item>

    </style>

    <style name="SelectorDescriptionTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>


    <style name="SelectorDescriptionTextAppearanceSpecial" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>


    <!-- Grow animation -->
    <style name="CustomAnimations.grow">
        <item name="@android:windowEnterAnimation">@anim/grow_in</item>
        <item name="@android:windowExitAnimation">@anim/grow_out</item>
    </style>


    <style name="SearchFunctionStyle" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">true</item>
    </style>


    <style name="ErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/edittext_error_color</item>
    </style>

    <style name="MyEditText" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/divider</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>


    </style>

    <style name="PhoneVerificationEdittext" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/divider</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>


    </style>




    <style name="MyEditTextLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@android:color/secondary_text_dark</item>
        <item name="colorControlActivated">@android:color/secondary_text_light</item>
        <item name="colorControlHighlight">@android:color/secondary_text_dark</item>
        <item name="colorAccent">@android:color/secondary_text_dark</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textColorHint">@android:color/tertiary_text_light</item>


    </style>


    <style name="MyEditText2" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/primary_text_light</item>


    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">13sp</item>
    </style>


    <style name="AppBarToolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="MapTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
        <item name="android:textColor">@color/white</item>


    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="NavigationMenuItemTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="colorControlNormal">@android:color/primary_text_light</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/divider</item>

        <item name="android:textColorHighlight">@android:color/secondary_text_dark</item>

    </style>


    <style name="ThemeOverlay.AppTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/textColorSecondaryLight</item>
    </style>


    <style name="BubbleTheme" parent="TextAppearance.AppCompat">

        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
        <item name="colorControlNormal">#dadada</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">#FFDFDFDF</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>


    <style name="AppAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <!-- To tint the buttons -->
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/text_black_87</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_light</item>
        <item name="android:itemPadding">@dimen/alert_def_padding</item>
        <item name="panelBackground">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>

    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/right_slide</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>


    <style name="DatePickerSpinner">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>

    </style>



</resources>
