<resources>

    <style name="AppThemeSplashScreen" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparent</item>

    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:buttonStyle">@style/PrimaryButton</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.Monitoring" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryMonitoring</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMonitoring</item>
        <item name="colorAccent">@color/colorAccentMonitoring</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:buttonStyle">@style/PrimaryButton.Monitoring</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>


    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorPrimary">@color/textColorPrimaryLight</item>
        <item name="textColorSecondary">@color/textColorSecondaryLight</item>
        <item name="textColorTertiary">@color/textColorTertiaryLight</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryLightInverted</item>
        <item name="textColorSecondaryInverse">@color/textColorSecondaryLightInverted</item>
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="fab_label_background_color">@color/fab_label_background_color_light</item>
        <item name="lightStatusBar">true</item>
        <item name="bottomSheetBackgroundColor">@color/bottom_sheet_light</item>
         <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
        <item name="alertDialogTheme">@style/AppAlertDialog</item>



    </style>




    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryInverted</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInverted</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorPrimary">@color/textColorPrimaryLightInverted</item>
        <item name="textColorSecondary">@color/textColorSecondaryLightInverted</item>
        <item name="textColorTertiary">@color/textColorTertiaryLightInverted</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryLight</item>
        <item name="textColorSecondaryInverse">@color/textColorSecondaryLight</item>
        <item name="backgroundColor">@color/colorPrimaryInverted</item>
        <item name="bottomSheetBackgroundColor">@color/bottom_sheet_dark</item>
        <item name="fab_label_background_color">@color/fab_label_background_color_dark</item>
        <item name="lightStatusBar">false</item>
         <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/colorPrimaryInverted</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
        <item name="alertDialogTheme">@style/AppAlertDialogDark</item>


    </style>


    <style name="MapTheme" parent="AppTheme">
         <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="AppPreferenceFragmentCompatStyle" parent="@style/PreferenceFragment.Material">


    </style>


    <style name="StyledTilEditTextFloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">#c2ededed</item>
    </style>

    <style name="StyledTilEditTextLayout">
        <item name="android:textColorHint">#c2ededed</item>
    </style>


    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BubbleTheme" parent="TextAppearance.AppCompat">

        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
        <item name="colorControlNormal">#dadada</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColorHint">#FFDFDFDF</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <style name="DatePickerSpinner" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:colorAccent">?attr/colorAccent</item>


    </style>


</resources>
