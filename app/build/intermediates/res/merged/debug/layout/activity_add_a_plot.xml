<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
                android:clipToPadding="false"
                android:clipChildren="false"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:orientation="vertical"
        >

    <include layout="@layout/toolbar"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_half"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                 >



                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_widthPercent="50%"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                     >

                    <TextView
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plot Name"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                         android:layout_marginBottom="@dimen/spacing_half"

                        />


                    <EditText
                         android:id="@+id/plotNameEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                         android:background="@drawable/border_background"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/spacing_normal"
                        />



                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_toRightOf="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     app:layout_widthPercent="50%"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_normal"

                    >


                    <TextView
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plot Size"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_half"
                        />




                    <android.support.percent.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/plotSizeSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_background"
                            android:ellipsize="end"
                            android:maxLines="1"
                            app:layout_widthPercent="50%"
                            app:ms_arrow_tint="@color/colorPrimary"
                            app:ms_background_color="@color/background"
                            android:layout_marginRight="@dimen/spacing_half"
                            />



                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/plotSizeUnitSpinner"
                            android:layout_toRightOf="@id/plotSizeSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_half"
                            android:background="@drawable/border_background"
                            android:ellipsize="end"
                            android:maxLines="1"
                            app:layout_widthPercent="50%"
                            app:ms_arrow_tint="@color/colorPrimary"
                            app:ms_background_color="@color/background"
                            />



                    </android.support.percent.PercentRelativeLayout>


                </LinearLayout>



            </android.support.percent.PercentRelativeLayout>




            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginRight="@dimen/spacing_normal"
                   >



                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_widthPercent="50%"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_normal"
                      >

                    <TextView
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated Production"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_half"

                        />


                    <android.support.percent.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/productionSizeSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_background"
                            android:ellipsize="end"
                            android:maxLines="1"
                            app:layout_widthPercent="50%"
                            app:ms_arrow_tint="@color/colorPrimary"
                            app:ms_background_color="@color/background"
                            android:layout_marginRight="@dimen/spacing_half"
                            />



                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/productionSizeUnitSpinner"
                            android:layout_toRightOf="@id/productionSizeSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_half"
                            android:background="@drawable/border_background"
                            android:ellipsize="end"
                            android:maxLines="1"
                            app:layout_widthPercent="50%"
                            app:ms_arrow_tint="@color/colorPrimary"
                            app:ms_background_color="@color/background"
                            />



                    </android.support.percent.PercentRelativeLayout>



                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_toRightOf="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     app:layout_widthPercent="30%"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"


                    >


                    <TextView
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pH"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_half"                        />



                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/phSpinner"
                             android:layout_toRightOf="@id/plotSizeSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_half"
                            android:background="@drawable/border_background"
                            android:ellipsize="end"
                            android:maxLines="1"
                             app:ms_arrow_tint="@color/colorPrimary"
                            app:ms_background_color="@color/background"
                            />





                </LinearLayout>



            </android.support.percent.PercentRelativeLayout>



            <TextView
                android:id="@+id/plotMapping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="click to map plot"
                style="@style/TextAppearance.AppCompat.Button"
                android:padding="@dimen/spacing_normal"
                android:layout_gravity="right"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="@dimen/spacing_half"
                android:background="?attr/selectableItemBackground"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@id/content"
        android:layout_above="@+id/buttonsLayout"
        android:layout_marginTop="@dimen/spacing_normal"
        android:clipToPadding="false"
        android:clipChildren="false"
        >

            <TextView
                android:id="@+id/aos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AOs"
                android:padding="@dimen/spacing_normal"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_tiny"
                android:textStyle="bold"
                />



            <ScrollView
                 android:layout_width="match_parent"
                android:layout_height="match_parent"
                 android:clipToPadding="false"
                 android:clipChildren="false"
                >



            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_normal"
            android:orientation="vertical"
            android:background="@drawable/border_background_white"
             >

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_marginLeft="@dimen/spacing_normal"
                 >

                <TextView
                    android:id="@+id/plantMaterial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Planting Material"
                     app:layout_widthPercent="50%"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/primary_text_light"
                    />




                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:layout_toRightOf="@id/plantMaterial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:ms_arrow_tint="@color/colorPrimary"
                    android:layout_marginRight="@dimen/spacing_half"
                    android:layout_centerInParent="true"
                    />


            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_marginLeft="@dimen/spacing_normal"
                      >

                    <TextView
                        android:id="@+id/treeDensity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tree Density"
                        app:layout_widthPercent="50%"
                        android:layout_marginRight="@dimen/spacing_normal"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/primary_text_light"
                        />




                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:layout_toRightOf="@id/treeDensity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:ellipsize="end"
                        android:maxLines="1"
                         app:ms_arrow_tint="@color/colorPrimary"
                         android:layout_marginRight="@dimen/spacing_half"
                        android:layout_centerVertical="true"
                        />


                </android.support.percent.PercentRelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_marginLeft="@dimen/spacing_normal"
                   >

                    <TextView
                        android:id="@+id/fertilizerApplication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fertilizer Application"
                        app:layout_widthPercent="50%"
                        android:layout_marginRight="@dimen/spacing_normal"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/primary_text_light"
                        />




                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:layout_toRightOf="@id/fertilizerApplication"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:ellipsize="end"
                        android:maxLines="1"
                        app:ms_arrow_tint="@color/colorPrimary"
                         android:layout_marginRight="@dimen/spacing_half"
                        android:layout_centerVertical="true"
                        />


                </android.support.percent.PercentRelativeLayout>


            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_marginLeft="@dimen/spacing_normal"
                 >

                <TextView
                    android:id="@+id/drainageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drainage Needed?"
                    app:layout_widthPercent="50%"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/primary_text_light"
                    />




                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:layout_toRightOf="@id/drainageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:ellipsize="end"
                    android:maxLines="1"
                    app:ms_arrow_tint="@color/colorPrimary"
                     android:layout_marginRight="@dimen/spacing_half"
                    android:layout_centerVertical="true"
                    />


            </android.support.percent.PercentRelativeLayout>

            </LinearLayout>






    </ScrollView>



    </LinearLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/buttonsLayout"
            android:layout_marginTop="@dimen/spacing_normal"
            android:padding="@dimen/spacing_normal"
            >



            <Button
                android:id="@+id/cancelButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/PrimaryButtonGrey"
                android:text="Cancel"
                android:padding="@dimen/spacing_normal"
                app:layout_widthPercent="40%"
                 />


            <Button
                android:id="@+id/saveButton"
                android:layout_toRightOf="@id/cancelButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/PrimaryButtonAccent"
                app:layout_widthPercent="60%"
                android:text="Save"
                android:padding="@dimen/spacing_normal"
                android:layout_marginLeft="@dimen/spacing_normal"

                />

        </android.support.percent.PercentRelativeLayout>



</RelativeLayout>